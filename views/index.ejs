                        }
                setTimeout(function () {
                    socket.emit('req_wifi_active1');
                },10000);

        })
        socket.on('get_wifi_all1', function (wifi_list) {
            $('#wifi_list2 li').remove();
            for(var i=0;i<wifi_list.length;i++){
                $('#wifi_list2').append("<li>"+wifi_list[i]+"</li>");

            }
            if(wifi_list.length>0)
                $('#wifi_list2').show();
            else
                alert("无可用wifi，或天线未连接");
