                socket.emit('req_wifi_test0');
            },10000);

        });
        socket.on('wifi_ap_success1',function(){
            setTimeout(function () {
                socket.emit('req_wifi_test1');
            },10000);
        });
        socket.on('get_wifi_test0', function (data) {
            if(data){
                if(data!='\n')
                    $('#wifi_cur1').text("当前连接:"+data);
