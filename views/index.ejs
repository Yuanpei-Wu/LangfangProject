                    alert("请重新输入密码，点击连接");
            }
            else{
                alert("请重新输入密码，点击连接");
            }
        })
        socket.on('get_wifi_test1', function (data) {
            if(data){
                if(data!='\n')
                    $('#wifi_cur2').text("当前连接:"+data);
                else
                    alert("请重新输入密码，点击连接");
            }
            else{
                alert("请重新输入密码，点击连接");
            }
        })


        socket.on('get_wifi_active0', function (data) {
            if(data){
                if(data!='\n')
                         $('#wifi_cur1').text("当前连接:"+data);
                else
                         $('#wifi_cur1').text("未连接");
                }
